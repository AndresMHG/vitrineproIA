---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import articlesData from '../../data/articles.json';
import profilesData from '../../data/profiles.json';

export function getStaticPaths() {
  return articlesData.articles.map((article) => ({
    params: { id: article.id },
    props: { article },
  }));
}

const { article } = Astro.props;
const author = profilesData.profiles.find(p => p.slug === article.authorSlug);

function formatDate(dateString: string) {
  const date = new Date(dateString);
  return date.toLocaleDateString('pt-BR', { day: '2-digit', month: 'long', year: 'numeric' });
}
---

<BaseLayout
  title={`${article.title} | VitrinePro V8`}
  description={article.subtitle}
>
  <Header />

  <article class="article-page">
    <!-- Hero com imagem cover -->
    <div class="article-hero">
      <img src={article.coverImage} alt={article.title} class="hero-image" />
      <div class="hero-overlay"></div>
    </div>

    <!-- Header do artigo -->
    <div class="container">
      <div class="article-header">
        <div class="tags">
          {article.tags.map((tag: string) => (
            <span class="tag">{tag}</span>
          ))}
        </div>
        <h1 class="article-title">{article.title}</h1>
        <p class="article-subtitle">{article.subtitle}</p>

        <div class="article-meta">
          <a href={`/perfil/${author?.slug}`} class="author-info">
            <div class="author-avatar">{author?.avatar}</div>
            <div class="author-details">
              <span class="author-name">{author?.name}</span>
              <span class="author-profession">{author?.profession}</span>
            </div>
          </a>
          <div class="meta-info">
            <span class="date">{formatDate(article.date)}</span>
            <span class="separator">•</span>
            <span class="read-time">{article.readTime}</span>
          </div>
        </div>
      </div>

      <!-- Conteúdo do artigo -->
      <div class="article-content">
        <div class="introduction">
          <p class="lead">{article.content.introduction}</p>
        </div>

        {article.content.sections.map((section: any) => (
          <section class="content-section">
            <h2>{section.title}</h2>
            <div class="section-text" set:html={section.text.replace(/\n\n/g, '</p><p>').replace(/\*\*(.*?)\*\*/g, '<strong>$1</strong>')} />
            {section.image && (
              <figure class="section-image">
                <img src={section.image} alt={section.title} />
                {section.caption && <figcaption>{section.caption}</figcaption>}
              </figure>
            )}
          </section>
        ))}

        {article.content.conclusion && (
          <div class="conclusion">
            <h2>Conclusão</h2>
            <p>{article.content.conclusion}</p>
          </div>
        )}

        {article.content.callToAction && (
          <div class="cta-box">
            <p>{article.content.callToAction}</p>
            <a href={`/perfil/${author?.slug}`} class="btn btn-primary btn-lg">
              Entrar em Contato
            </a>
          </div>
        )}
      </div>

      <!-- Autor do artigo -->
      <div class="article-author-card">
        <div class="author-card-avatar">{author?.avatar}</div>
        <div class="author-card-content">
          <h3>Sobre o autor</h3>
          <a href={`/perfil/${author?.slug}`} class="author-card-name">{author?.name}</a>
          <p class="author-card-profession">{author?.profession}</p>
          <p class="author-card-bio">{author?.bio}</p>
          <a href={`/perfil/${author?.slug}`} class="btn btn-outline">Ver Perfil Completo</a>
        </div>
      </div>
    </div>
  </article>

  <Footer />
</BaseLayout>

<style>
  .article-page {
    background-color: var(--bg-primary);
  }

  /* Hero */
  .article-hero {
    position: relative;
    height: 60vh;
    min-height: 400px;
    max-height: 700px;
    overflow: hidden;
    background-color: var(--bg-dark);
  }

  .hero-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .hero-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(to bottom, rgba(0,0,0,0.1) 0%, rgba(0,0,0,0.3) 100%);
  }

  /* Header */
  .article-header {
    max-width: 800px;
    margin: 0 auto;
    padding: var(--spacing-4xl) var(--spacing-lg) var(--spacing-3xl);
  }

  .tags {
    display: flex;
    gap: var(--spacing-sm);
    margin-bottom: var(--spacing-lg);
    flex-wrap: wrap;
  }

  .tag {
    font-size: var(--text-xs);
    font-weight: 600;
    color: var(--primary);
    background-color: rgba(37, 99, 235, 0.1);
    padding: var(--spacing-xs) var(--spacing-md);
    border-radius: var(--radius-full);
  }

  .article-title {
    font-size: var(--text-6xl);
    font-weight: 800;
    line-height: 1.1;
    color: var(--text-primary);
    margin: 0 0 var(--spacing-md) 0;
  }

  .article-subtitle {
    font-size: var(--text-2xl);
    color: var(--text-secondary);
    line-height: var(--leading-relaxed);
    margin: 0 0 var(--spacing-2xl) 0;
  }

  .article-meta {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-top: var(--spacing-lg);
    border-top: 1px solid var(--border);
  }

  .author-info {
    display: flex;
    align-items: center;
    gap: var(--spacing-md);
    text-decoration: none;
    transition: opacity var(--transition-fast);
  }

  .author-info:hover {
    opacity: 0.8;
  }

  .author-avatar {
    width: 56px;
    height: 56px;
    border-radius: 50%;
    background: linear-gradient(135deg, var(--primary), var(--secondary));
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-size: var(--text-xl);
    font-weight: 700;
  }

  .author-details {
    display: flex;
    flex-direction: column;
    gap: 2px;
  }

  .author-name {
    font-size: var(--text-base);
    font-weight: 600;
    color: var(--text-primary);
  }

  .author-profession {
    font-size: var(--text-sm);
    color: var(--text-secondary);
  }

  .meta-info {
    display: flex;
    align-items: center;
    gap: var(--spacing-sm);
    color: var(--text-secondary);
    font-size: var(--text-sm);
  }

  .separator {
    color: var(--border);
  }

  /* Conteúdo */
  .article-content {
    max-width: 740px;
    margin: 0 auto;
    padding: 0 var(--spacing-lg) var(--spacing-4xl);
  }

  .introduction {
    margin-bottom: var(--spacing-3xl);
  }

  .lead {
    font-size: var(--text-xl);
    line-height: var(--leading-relaxed);
    color: var(--text-primary);
    margin: 0;
  }

  .content-section {
    margin-bottom: var(--spacing-4xl);
  }

  .content-section h2 {
    font-size: var(--text-3xl);
    font-weight: 700;
    color: var(--text-primary);
    margin: 0 0 var(--spacing-lg) 0;
  }

  .section-text {
    font-size: var(--text-lg);
    line-height: 1.8;
    color: var(--text-primary);
    margin-bottom: var(--spacing-xl);
  }

  .section-text :global(p) {
    margin-bottom: var(--spacing-lg);
  }

  .section-text :global(strong) {
    font-weight: 700;
    color: var(--text-primary);
  }

  .section-image {
    margin: var(--spacing-2xl) 0;
    border-radius: var(--radius-xl);
    overflow: hidden;
  }

  .section-image img {
    width: 100%;
    height: auto;
    display: block;
  }

  .section-image figcaption {
    padding: var(--spacing-md);
    background-color: var(--bg-secondary);
    font-size: var(--text-sm);
    color: var(--text-secondary);
    text-align: center;
    font-style: italic;
  }

  .conclusion {
    padding: var(--spacing-2xl);
    background-color: var(--bg-secondary);
    border-left: 4px solid var(--primary);
    border-radius: var(--radius-lg);
    margin-bottom: var(--spacing-3xl);
  }

  .conclusion h2 {
    font-size: var(--text-2xl);
    font-weight: 700;
    margin: 0 0 var(--spacing-md) 0;
  }

  .conclusion p {
    font-size: var(--text-lg);
    line-height: var(--leading-relaxed);
    margin: 0;
    color: var(--text-primary);
  }

  .cta-box {
    background: linear-gradient(135deg, var(--primary), var(--secondary));
    padding: var(--spacing-3xl);
    border-radius: var(--radius-xl);
    text-align: center;
    color: white;
  }

  .cta-box p {
    font-size: var(--text-xl);
    margin: 0 0 var(--spacing-xl) 0;
  }

  .cta-box .btn {
    background-color: white;
    color: var(--primary);
    border: none;
  }

  .cta-box .btn:hover {
    background-color: var(--bg-secondary);
    transform: translateY(-2px);
  }

  /* Autor card */
  .article-author-card {
    max-width: 740px;
    margin: var(--spacing-4xl) auto;
    padding: var(--spacing-2xl);
    background-color: var(--bg-secondary);
    border-radius: var(--radius-2xl);
    display: flex;
    gap: var(--spacing-xl);
  }

  .author-card-avatar {
    width: 120px;
    height: 120px;
    border-radius: 50%;
    background: linear-gradient(135deg, var(--primary), var(--secondary));
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-size: var(--text-4xl);
    font-weight: 700;
    flex-shrink: 0;
  }

  .author-card-content {
    flex: 1;
  }

  .author-card-content h3 {
    font-size: var(--text-sm);
    font-weight: 600;
    color: var(--text-secondary);
    text-transform: uppercase;
    letter-spacing: 0.5px;
    margin: 0 0 var(--spacing-xs) 0;
  }

  .author-card-name {
    font-size: var(--text-2xl);
    font-weight: 700;
    color: var(--text-primary);
    text-decoration: none;
    display: block;
    margin-bottom: 2px;
  }

  .author-card-name:hover {
    color: var(--primary);
  }

  .author-card-profession {
    font-size: var(--text-base);
    color: var(--primary);
    font-weight: 600;
    margin: 0 0 var(--spacing-md) 0;
  }

  .author-card-bio {
    font-size: var(--text-base);
    line-height: var(--leading-relaxed);
    color: var(--text-secondary);
    margin: 0 0 var(--spacing-lg) 0;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .article-hero {
      height: 40vh;
      min-height: 300px;
    }

    .article-header {
      padding: var(--spacing-3xl) var(--spacing-lg) var(--spacing-2xl);
    }

    .article-title {
      font-size: var(--text-4xl);
    }

    .article-subtitle {
      font-size: var(--text-xl);
    }

    .article-meta {
      flex-direction: column;
      align-items: flex-start;
      gap: var(--spacing-md);
    }

    .content-section h2 {
      font-size: var(--text-2xl);
    }

    .section-text {
      font-size: var(--text-base);
    }

    .lead {
      font-size: var(--text-lg);
    }

    .article-author-card {
      flex-direction: column;
      text-align: center;
      align-items: center;
    }

    .author-card-avatar {
      width: 100px;
      height: 100px;
      font-size: var(--text-3xl);
    }
  }
</style>
