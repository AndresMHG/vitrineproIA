---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Hero from '../components/Hero.vue';
import Features from '../components/Features.vue';
import WhyChoose from '../components/WhyChoose.vue';
import HowItWorks from '../components/HowItWorks.vue';
import Testimonials from '../components/Testimonials.vue';
import FloatingCTA from '../components/FloatingCTA.vue';
---

<BaseLayout
  title="VitrinePro V8 - Seu Portfólio Profissional Online"
  description="Crie seu portfólio profissional completo. Ideal para advogados, médicos, programadores e todos os profissionais que querem se destacar. Gratuito e fácil de usar."
>
  <Header />

  <main>
    <Hero client:load />
    <Features client:visible />
    <WhyChoose client:visible />
    <HowItWorks client:visible />
    <Testimonials client:visible />
  </main>

  <Footer />
  <FloatingCTA client:load />
</BaseLayout>
