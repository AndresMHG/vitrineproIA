---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<BaseLayout
  title="Dashboard - VitrinePro V8"
  description="Gerencie seu portfólio profissional"
>
  <Header />

  <main class="dashboard-page">
    <div class="container">
      <div class="dashboard-header">
        <h1>Dashboard</h1>
        <p>Bem-vindo ao seu painel de controle</p>
      </div>

      <div id="dashboard-content" style="opacity: 0;">
        <div class="dashboard-grid">
          <div class="dashboard-card">
            <div class="card-icon" style="background-color: #dbeafe;">
              <svg width="24" height="24" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24" style="color: #2563eb;">
                <path stroke-linecap="round" stroke-linejoin="round" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
              </svg>
            </div>
            <h2>Perfil</h2>
            <p id="user-info" class="user-info">Carregando...</p>
          </div>

          <div class="dashboard-card">
            <div class="card-icon" style="background-color: #dcfce7;">
              <svg width="24" height="24" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24" style="color: #16a34a;">
                <path stroke-linecap="round" stroke-linejoin="round" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
              </svg>
            </div>
            <h2>Portfólio</h2>
            <p>Configure e personalize seu portfólio profissional</p>
            <a href="/perfil/meu-perfil" class="card-link">Gerenciar →</a>
          </div>

          <div class="dashboard-card">
            <div class="card-icon" style="background-color: #fef3c7;">
              <svg width="24" height="24" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24" style="color: #d97706;">
                <path stroke-linecap="round" stroke-linejoin="round" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
                <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
              </svg>
            </div>
            <h2>Configurações</h2>
            <p>Ajuste suas preferências e configurações da conta</p>
            <a href="#" class="card-link">Configurar →</a>
          </div>

          <div class="dashboard-card">
            <div class="card-icon" style="background-color: #fce7f3;">
              <svg width="24" height="24" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24" style="color: #db2777;">
                <path stroke-linecap="round" stroke-linejoin="round" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
              </svg>
            </div>
            <h2>Estatísticas</h2>
            <p>Visualize o desempenho do seu portfólio</p>
            <a href="#" class="card-link">Ver estatísticas →</a>
          </div>
        </div>

        <div class="dashboard-actions">
          <button id="logout-btn" class="btn-logout">Sair da Conta</button>
        </div>
      </div>
    </div>
  </main>

  <Footer />
</BaseLayout>

<style>
  .dashboard-page {
    min-height: calc(100vh - 200px);
    padding: var(--spacing-2xl) 0;
  }

  .dashboard-header {
    margin-bottom: var(--spacing-2xl);
  }

  .dashboard-header h1 {
    font-size: var(--text-4xl);
    font-weight: 700;
    color: var(--text-primary);
    margin: 0 0 0.5rem 0;
  }

  .dashboard-header p {
    font-size: var(--text-lg);
    color: var(--text-secondary);
    margin: 0;
  }

  .dashboard-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: var(--spacing-lg);
    margin-bottom: var(--spacing-2xl);
  }

  .dashboard-card {
    background-color: var(--bg-primary);
    border: 1px solid var(--border);
    border-radius: var(--radius-xl);
    padding: var(--spacing-xl);
    transition: all var(--transition-base);
  }

  .dashboard-card:hover {
    box-shadow: var(--shadow-lg);
    transform: translateY(-2px);
  }

  .card-icon {
    width: 48px;
    height: 48px;
    border-radius: var(--radius-lg);
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: var(--spacing-md);
  }

  .dashboard-card h2 {
    font-size: var(--text-xl);
    font-weight: 600;
    color: var(--text-primary);
    margin: 0 0 var(--spacing-sm) 0;
  }

  .dashboard-card p {
    font-size: var(--text-base);
    color: var(--text-secondary);
    margin: 0;
    line-height: var(--leading-relaxed);
  }

  .user-info {
    font-weight: 600;
    color: var(--primary);
  }

  .card-link {
    display: inline-block;
    margin-top: var(--spacing-md);
    color: var(--primary);
    font-weight: 600;
    text-decoration: none;
    font-size: var(--text-sm);
    transition: color var(--transition-fast);
  }

  .card-link:hover {
    color: var(--primary-dark);
    text-decoration: underline;
  }

  .dashboard-actions {
    display: flex;
    justify-content: center;
    padding-top: var(--spacing-xl);
    border-top: 1px solid var(--border);
  }

  .btn-logout {
    padding: var(--spacing-md) var(--spacing-xl);
    background-color: var(--bg-secondary);
    color: var(--text-primary);
    border: 1px solid var(--border);
    border-radius: var(--radius-md);
    font-size: var(--text-base);
    font-weight: 600;
    font-family: var(--font-sans);
    cursor: pointer;
    transition: all var(--transition-base);
  }

  .btn-logout:hover {
    background-color: var(--bg-tertiary);
    border-color: var(--border-dark);
    transform: translateY(-1px);
    box-shadow: var(--shadow-sm);
  }
</style>

<script>
  import { isAuthenticated, logout } from '../utils/auth';
  import { getProfile } from '../utils/api';

  // Proteção da rota: verificar autenticação
  if (typeof window !== 'undefined') {
    if (!isAuthenticated()) {
      window.location.href = '/login?redirect=/dashboard';
    } else {
      // Carregar dados do usuário
      const dashboardContent = document.getElementById('dashboard-content');
      const userInfo = document.getElementById('user-info');

      getProfile()
        .then(profile => {
          if (userInfo) {
            userInfo.textContent = `${profile.firstName} ${profile.lastName}`;
            if (profile.provider) {
              userInfo.textContent += ` (via ${profile.provider})`;
            }
          }

          // Mostrar conteúdo
          if (dashboardContent) {
            dashboardContent.style.opacity = '1';
            dashboardContent.style.transition = 'opacity 0.3s ease-in-out';
          }
        })
        .catch(error => {
          console.error('Erro ao carregar perfil:', error);
          if (userInfo) {
            userInfo.textContent = 'Erro ao carregar perfil';
          }
          // Se houver erro 401, fazer logout
          if (error.statusCode === 401) {
            logout();
          }
        });

      // Botão de logout
      const logoutBtn = document.getElementById('logout-btn');
      if (logoutBtn) {
        logoutBtn.addEventListener('click', () => {
          if (confirm('Tem certeza que deseja sair?')) {
            logout();
          }
        });
      }
    }
  }
</script>
