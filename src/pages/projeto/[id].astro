---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import projectsData from '../../data/projects.json';
import profilesData from '../../data/profiles.json';

export function getStaticPaths() {
  return projectsData.projects.map((project) => ({
    params: { id: project.id },
    props: { project },
  }));
}

const { project } = Astro.props;
const author = profilesData.profiles.find(p => p.slug === project.authorSlug);
---

<BaseLayout
  title={`${project.title} | VitrinePro V8`}
  description={project.subtitle}
>
  <Header />

  <article class="project-page">
    <!-- Hero com Cover Image - estilo Behance -->
    <div class="project-hero">
      <img src={project.coverImage} alt={project.title} class="hero-image" />
    </div>

    <div class="container-wide">
      <!-- Header do Projeto -->
      <div class="project-header">
        <div class="header-main">
          <div class="tags">
            {project.tags.map((tag: string) => (
              <span class="tag">{tag}</span>
            ))}
          </div>
          <h1 class="project-title">{project.title}</h1>
          <p class="project-subtitle">{project.subtitle}</p>
        </div>

        <div class="header-sidebar">
          <a href={`/perfil/${author?.slug}`} class="author-link">
            <div class="author-avatar">{author?.avatar}</div>
            <div>
              <div class="author-name">{author?.name}</div>
              <div class="author-profession">{author?.profession}</div>
            </div>
          </a>

          <div class="project-stats">
            <div class="stat-item">
              <span class="stat-label">Cliente</span>
              <span class="stat-value">{project.client}</span>
            </div>
            <div class="stat-item">
              <span class="stat-label">Ano</span>
              <span class="stat-value">{project.year}</span>
            </div>
            <div class="stat-item">
              <span class="stat-label">Duração</span>
              <span class="stat-value">{project.duration}</span>
            </div>
            <div class="stat-item">
              <span class="stat-label">Função</span>
              <span class="stat-value">{project.role}</span>
            </div>
            <div class="stat-item">
              <span class="stat-label">Status</span>
              <span class={`status-badge ${project.status === 'Concluído' ? 'completed' : 'ongoing'}`}>
                {project.status}
              </span>
            </div>
          </div>
        </div>
      </div>

      <!-- Overview -->
      <div class="project-content">
        <section class="content-section">
          <h2>Visão Geral</h2>
          <p class="large-text">{project.overview}</p>
        </section>

        <!-- Desafio e Solução -->
        <div class="challenge-solution-grid">
          <div class="cs-card challenge">
            <h3>O Desafio</h3>
            <p>{project.challenge}</p>
          </div>
          <div class="cs-card solution">
            <h3>A Solução</h3>
            <p>{project.solution}</p>
          </div>
        </div>

        <!-- Galeria de Imagens - Estilo Behance -->
        {project.images && project.images.length > 0 && (
          <section class="image-gallery">
            {project.images.map((image: any) => (
              <figure class="gallery-item">
                <img src={image.url} alt={image.caption || project.title} />
                {image.caption && (
                  <figcaption>{image.caption}</figcaption>
                )}
              </figure>
            ))}
          </section>
        )}

        <!-- Funcionalidades Principais -->
        {project.keyFeatures && project.keyFeatures.length > 0 && (
          <section class="content-section">
            <h2>Funcionalidades Principais</h2>
            <div class="features-grid">
              {project.keyFeatures.map((feature: any, index: number) => (
                <div class="feature-card">
                  <div class="feature-number">{String(index + 1).padStart(2, '0')}</div>
                  <h3>{feature.title}</h3>
                  <p>{feature.description}</p>
                </div>
              ))}
            </div>
          </section>
        )}

        <!-- Processo -->
        {project.process && project.process.length > 0 && (
          <section class="content-section">
            <h2>Processo de Design</h2>
            <div class="process-timeline">
              {project.process.map((step: string, index: number) => (
                <div class="timeline-item">
                  <div class="timeline-marker">{index + 1}</div>
                  <div class="timeline-content">{step}</div>
                </div>
              ))}
            </div>
          </section>
        )}

        <!-- Resultados -->
        {project.results && (
          <section class="results-section">
            <h2>Resultados</h2>
            {project.results.metrics && (
              <div class="metrics-grid">
                {project.results.metrics.map((metric: any) => (
                  <div class="metric-card">
                    <div class="metric-value">{metric.value}</div>
                    <div class="metric-label">{metric.label}</div>
                  </div>
                ))}
              </div>
            )}
            {project.results.testimonial && (
              <blockquote class="testimonial">
                <p>"{project.results.testimonial.text}"</p>
                <cite>— {project.results.testimonial.author}</cite>
              </blockquote>
            )}
          </section>
        )}

        <!-- Ferramentas -->
        {project.tools && project.tools.length > 0 && (
          <section class="content-section">
            <h2>Ferramentas Utilizadas</h2>
            <div class="tools-list">
              {project.tools.map((tool: string) => (
                <span class="tool-badge">{tool}</span>
              ))}
            </div>
          </section>
        )}

        <!-- CTA -->
        <div class="project-cta">
          <h3>Gostou deste projeto?</h3>
          <p>Entre em contato para discutir como posso ajudar no seu próximo projeto.</p>
          <a href={`/perfil/${author?.slug}`} class="btn btn-primary btn-lg">
            Ver Mais Projetos
          </a>
        </div>
      </div>
    </div>
  </article>

  <Footer />
</BaseLayout>

<style>
  .project-page {
    background-color: #fafafa;
  }

  /* Hero - Full width image */
  .project-hero {
    width: 100%;
    height: 70vh;
    min-height: 500px;
    max-height: 800px;
    overflow: hidden;
    background-color: var(--bg-dark);
  }

  .hero-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  /* Container */
  .container-wide {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 var(--spacing-2xl);
  }

  /* Header */
  .project-header {
    display: grid;
    grid-template-columns: 1fr 400px;
    gap: var(--spacing-4xl);
    padding: var(--spacing-4xl) 0;
    border-bottom: 1px solid var(--border-light);
  }

  .header-main {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-md);
  }

  .tags {
    display: flex;
    gap: var(--spacing-sm);
    flex-wrap: wrap;
  }

  .tag {
    font-size: var(--text-xs);
    font-weight: 600;
    color: var(--primary);
    background-color: white;
    padding: var(--spacing-xs) var(--spacing-md);
    border-radius: var(--radius-full);
    border: 1px solid rgba(37, 99, 235, 0.2);
  }

  .project-title {
    font-size: var(--text-5xl);
    font-weight: 800;
    line-height: 1.1;
    color: var(--text-primary);
    margin: 0;
  }

  .project-subtitle {
    font-size: var(--text-xl);
    color: var(--text-secondary);
    line-height: var(--leading-relaxed);
    margin: 0;
  }

  /* Sidebar */
  .header-sidebar {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-xl);
  }

  .author-link {
    display: flex;
    align-items: center;
    gap: var(--spacing-md);
    padding: var(--spacing-lg);
    background-color: white;
    border-radius: var(--radius-xl);
    text-decoration: none;
    transition: all var(--transition-base);
  }

  .author-link:hover {
    box-shadow: var(--shadow-md);
    transform: translateY(-2px);
  }

  .author-avatar {
    width: 64px;
    height: 64px;
    border-radius: 50%;
    background: linear-gradient(135deg, var(--primary), var(--secondary));
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-size: var(--text-2xl);
    font-weight: 700;
    flex-shrink: 0;
  }

  .author-name {
    font-size: var(--text-base);
    font-weight: 600;
    color: var(--text-primary);
  }

  .author-profession {
    font-size: var(--text-sm);
    color: var(--text-secondary);
  }

  .project-stats {
    background-color: white;
    border-radius: var(--radius-xl);
    padding: var(--spacing-xl);
    display: flex;
    flex-direction: column;
    gap: var(--spacing-md);
  }

  .stat-item {
    display: flex;
    flex-direction: column;
    gap: 4px;
    padding-bottom: var(--spacing-sm);
    border-bottom: 1px solid var(--border-light);
  }

  .stat-item:last-child {
    border-bottom: none;
  }

  .stat-label {
    font-size: var(--text-xs);
    font-weight: 600;
    color: var(--text-secondary);
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .stat-value {
    font-size: var(--text-base);
    color: var(--text-primary);
    font-weight: 500;
  }

  .status-badge {
    display: inline-block;
    font-size: var(--text-sm);
    font-weight: 600;
    padding: var(--spacing-xs) var(--spacing-md);
    border-radius: var(--radius-md);
  }

  .status-badge.completed {
    background-color: #d1fae5;
    color: #065f46;
  }

  .status-badge.ongoing {
    background-color: #dbeafe;
    color: #1e40af;
  }

  /* Content */
  .project-content {
    max-width: 900px;
    margin: 0 auto;
    padding: var(--spacing-4xl) 0;
  }

  .content-section {
    margin-bottom: var(--spacing-4xl);
  }

  .content-section h2 {
    font-size: var(--text-3xl);
    font-weight: 700;
    color: var(--text-primary);
    margin: 0 0 var(--spacing-xl) 0;
  }

  .large-text {
    font-size: var(--text-xl);
    line-height: 1.8;
    color: var(--text-primary);
  }

  /* Challenge & Solution Grid */
  .challenge-solution-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: var(--spacing-lg);
    margin-bottom: var(--spacing-4xl);
  }

  .cs-card {
    background-color: white;
    padding: var(--spacing-2xl);
    border-radius: var(--radius-xl);
    border-left: 4px solid;
  }

  .cs-card.challenge {
    border-left-color: #f59e0b;
  }

  .cs-card.solution {
    border-left-color: #10b981;
  }

  .cs-card h3 {
    font-size: var(--text-xl);
    font-weight: 700;
    margin: 0 0 var(--spacing-md) 0;
  }

  .cs-card p {
    font-size: var(--text-base);
    line-height: var(--leading-relaxed);
    color: var(--text-secondary);
    margin: 0;
  }

  /* Image Gallery - Behance Style */
  .image-gallery {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-2xl);
    margin: var(--spacing-4xl) 0;
  }

  .gallery-item {
    margin: 0;
    border-radius: var(--radius-xl);
    overflow: hidden;
    background-color: white;
  }

  .gallery-item img {
    width: 100%;
    height: auto;
    display: block;
  }

  .gallery-item figcaption {
    padding: var(--spacing-lg);
    font-size: var(--text-sm);
    color: var(--text-secondary);
    text-align: center;
    font-style: italic;
  }

  /* Features Grid */
  .features-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: var(--spacing-lg);
  }

  .feature-card {
    background-color: white;
    padding: var(--spacing-xl);
    border-radius: var(--radius-xl);
  }

  .feature-number {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background: linear-gradient(135deg, var(--primary), var(--secondary));
    color: white;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 700;
    margin-bottom: var(--spacing-md);
  }

  .feature-card h3 {
    font-size: var(--text-lg);
    font-weight: 600;
    margin: 0 0 var(--spacing-sm) 0;
  }

  .feature-card p {
    font-size: var(--text-sm);
    line-height: var(--leading-relaxed);
    color: var(--text-secondary);
    margin: 0;
  }

  /* Process Timeline */
  .process-timeline {
    background-color: white;
    padding: var(--spacing-2xl);
    border-radius: var(--radius-xl);
  }

  .timeline-item {
    display: flex;
    gap: var(--spacing-lg);
    padding: var(--spacing-md) 0;
    border-bottom: 1px solid var(--border-light);
  }

  .timeline-item:last-child {
    border-bottom: none;
  }

  .timeline-marker {
    width: 32px;
    height: 32px;
    border-radius: 50%;
    background-color: var(--primary);
    color: white;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 600;
    font-size: var(--text-sm);
    flex-shrink: 0;
  }

  .timeline-content {
    flex: 1;
    font-size: var(--text-base);
    color: var(--text-primary);
    padding-top: 4px;
  }

  /* Results */
  .results-section {
    background: linear-gradient(135deg, #f3f4f6 0%, #e5e7eb 100%);
    padding: var(--spacing-3xl);
    border-radius: var(--radius-2xl);
    margin: var(--spacing-4xl) 0;
  }

  .results-section h2 {
    text-align: center;
    margin-bottom: var(--spacing-2xl);
  }

  .metrics-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: var(--spacing-lg);
    margin-bottom: var(--spacing-2xl);
  }

  .metric-card {
    background-color: white;
    padding: var(--spacing-xl);
    border-radius: var(--radius-xl);
    text-align: center;
  }

  .metric-value {
    font-size: var(--text-5xl);
    font-weight: 800;
    background: linear-gradient(135deg, var(--primary), var(--secondary));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    margin-bottom: var(--spacing-xs);
  }

  .metric-label {
    font-size: var(--text-sm);
    color: var(--text-secondary);
    font-weight: 500;
  }

  .testimonial {
    background-color: white;
    padding: var(--spacing-2xl);
    border-radius: var(--radius-xl);
    border-left: 4px solid var(--primary);
    font-style: normal;
  }

  .testimonial p {
    font-size: var(--text-xl);
    line-height: var(--leading-relaxed);
    color: var(--text-primary);
    margin: 0 0 var(--spacing-md) 0;
  }

  .testimonial cite {
    font-size: var(--text-base);
    color: var(--text-secondary);
    font-weight: 600;
    font-style: normal;
  }

  /* Tools */
  .tools-list {
    display: flex;
    gap: var(--spacing-sm);
    flex-wrap: wrap;
  }

  .tool-badge {
    font-size: var(--text-sm);
    font-weight: 500;
    background-color: white;
    color: var(--text-primary);
    padding: var(--spacing-sm) var(--spacing-lg);
    border-radius: var(--radius-lg);
    border: 1px solid var(--border);
  }

  /* CTA */
  .project-cta {
    background: linear-gradient(135deg, var(--primary), var(--secondary));
    padding: var(--spacing-3xl);
    border-radius: var(--radius-2xl);
    text-align: center;
    color: white;
    margin-top: var(--spacing-4xl);
  }

  .project-cta h3 {
    font-size: var(--text-3xl);
    font-weight: 700;
    margin: 0 0 var(--spacing-md) 0;
  }

  .project-cta p {
    font-size: var(--text-lg);
    margin: 0 0 var(--spacing-xl) 0;
    opacity: 0.95;
  }

  .project-cta .btn {
    background-color: white;
    color: var(--primary);
    border: none;
  }

  .project-cta .btn:hover {
    background-color: var(--bg-secondary);
    transform: translateY(-2px);
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .project-header {
      grid-template-columns: 1fr;
    }

    .header-sidebar {
      order: -1;
    }

    .challenge-solution-grid,
    .features-grid,
    .metrics-grid {
      grid-template-columns: 1fr;
    }
  }

  @media (max-width: 768px) {
    .project-hero {
      height: 50vh;
      min-height: 300px;
    }

    .container-wide {
      padding: 0 var(--spacing-lg);
    }

    .project-title {
      font-size: var(--text-3xl);
    }

    .project-subtitle {
      font-size: var(--text-base);
    }

    .large-text {
      font-size: var(--text-lg);
    }
  }
</style>
