---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import eventsData from '../../data/events.json';
import profilesData from '../../data/profiles.json';

export function getStaticPaths() {
  return eventsData.events.map((event) => ({
    params: { id: event.id },
    props: { event },
  }));
}

const { event } = Astro.props;
const author = profilesData.profiles.find(p => p.slug === event.authorSlug);

function formatDate(dateString: string) {
  const date = new Date(dateString);
  return date.toLocaleDateString('pt-BR', { day: '2-digit', month: 'long', year: 'numeric' });
}
---

<BaseLayout
  title={`${event.title} | VitrinePro V8`}
  description={event.subtitle}
>
  <Header />

  <article class="event-page">
    <!-- Hero -->
    <div class="event-hero">
      <img src={event.coverImage} alt={event.title} class="hero-image" />
      <div class="hero-overlay"></div>
      <div class="hero-content">
        <div class="container">
          <span class="event-type">{event.eventType}</span>
          <h1 class="event-title">{event.title}</h1>
          <div class="event-meta-hero">
            <span class="meta-item">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <rect x="3" y="4" width="18" height="18" rx="2" ry="2"/>
                <line x1="16" y1="2" x2="16" y2="6"/>
                <line x1="8" y1="2" x2="8" y2="6"/>
                <line x1="3" y1="10" x2="21" y2="10"/>
              </svg>
              {formatDate(event.date)}
            </span>
            <span class="meta-item">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <circle cx="12" cy="12" r="10"/>
                <polyline points="12 6 12 12 16 14"/>
              </svg>
              {event.time}
            </span>
            <span class="meta-item">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                <path d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
              </svg>
              {event.location}
            </span>
          </div>
        </div>
      </div>
    </div>

    <div class="container">
      <div class="event-layout">
        <!-- Main Content -->
        <div class="event-main">
          <!-- Tags -->
          <div class="tags">
            {event.tags.map((tag: string) => (
              <span class="tag">{tag}</span>
            ))}
          </div>

          <!-- Overview -->
          <section class="content-section">
            <h2>Sobre o Evento</h2>
            <p class="large-text">{event.overview}</p>
          </section>

          <!-- Topics -->
          {event.topics && event.topics.length > 0 && (
            <section class="content-section">
              <h2>Tópicos Abordados</h2>
              <ul class="topics-list">
                {event.topics.map((topic: string) => (
                  <li>{topic}</li>
                ))}
              </ul>
            </section>
          )}

          <!-- Schedule -->
          {event.schedule && event.schedule.length > 0 && (
            <section class="content-section">
              <h2>Programação</h2>
              <div class="schedule">
                {event.schedule.map((item: any) => (
                  <div class="schedule-item">
                    <div class="schedule-time">{item.time}</div>
                    <div class="schedule-activity">{item.activity}</div>
                  </div>
                ))}
              </div>
            </section>
          )}

          <!-- What You Will Learn -->
          {event.whatYouWillLearn && event.whatYouWillLearn.length > 0 && (
            <section class="content-section highlight-section">
              <h2>O Que Você Vai Aprender</h2>
              <ul class="learn-list">
                {event.whatYouWillLearn.map((item: string) => (
                  <li>
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <path d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
                    </svg>
                    {item}
                  </li>
                ))}
              </ul>
            </section>
          )}

          <!-- Speaker Info -->
          {event.aboutSpeaker && (
            <section class="content-section">
              <h2>Sobre o Palestrante</h2>
              <div class="speaker-card">
                <div class="speaker-avatar">{author?.avatar}</div>
                <div class="speaker-info">
                  <a href={`/perfil/${author?.slug}`} class="speaker-name">{author?.name}</a>
                  <p class="speaker-profession">{author?.profession}</p>
                  <p class="speaker-bio">{event.aboutSpeaker}</p>
                </div>
              </div>
            </section>
          )}

          <!-- For Whom -->
          {event.forWhom && (
            <section class="content-section">
              <h2>Para Quem é Este Evento</h2>
              <p>{event.forWhom}</p>
            </section>
          )}

          <!-- Materials -->
          {event.materials && (
            <div class="info-box">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
              </svg>
              <p><strong>Materiais Inclusos:</strong> {event.materials}</p>
            </div>
          )}
        </div>

        <!-- Sidebar -->
        <aside class="event-sidebar">
          <!-- Registration Card -->
          <div class="sidebar-card registration-card">
            <h3>Inscrição</h3>
            {event.registration && (
              <div class="registration-info">
                <div class="info-item">
                  <span class="info-label">Status</span>
                  <span class="status-badge">{event.registration.status}</span>
                </div>
                <div class="info-item">
                  <span class="info-label">Investimento</span>
                  <span class="info-value">{event.registration.price}</span>
                </div>
                {event.registration.deadline && (
                  <div class="info-item">
                    <span class="info-label">Prazo</span>
                    <span class="info-value">{formatDate(event.registration.deadline)}</span>
                  </div>
                )}
              </div>
            )}
            <button class="btn btn-accent btn-lg cta-button">Inscrever-se Agora</button>
          </div>

          <!-- Event Details -->
          <div class="sidebar-card">
            <h3>Detalhes do Evento</h3>
            <div class="details-list">
              <div class="detail-item">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <rect x="3" y="4" width="18" height="18" rx="2" ry="2"/>
                  <line x1="16" y1="2" x2="16" y2="6"/>
                  <line x1="8" y1="2" x2="8" y2="6"/>
                  <line x1="3" y1="10" x2="21" y2="10"/>
                </svg>
                <div>
                  <div class="detail-label">Data</div>
                  <div class="detail-value">{formatDate(event.date)}</div>
                </div>
              </div>
              <div class="detail-item">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <circle cx="12" cy="12" r="10"/>
                  <polyline points="12 6 12 12 16 14"/>
                </svg>
                <div>
                  <div class="detail-label">Horário</div>
                  <div class="detail-value">{event.time}</div>
                </div>
              </div>
              <div class="detail-item">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                  <path d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                </svg>
                <div>
                  <div class="detail-label">Local</div>
                  <div class="detail-value">{event.location}</div>
                </div>
              </div>
              {event.capacity && (
                <div class="detail-item">
                  <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
                  </svg>
                  <div>
                    <div class="detail-label">Capacidade</div>
                    <div class="detail-value">{event.capacity}</div>
                  </div>
                </div>
              )}
              {event.language && (
                <div class="detail-item">
                  <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M3 5h12M9 3v2m1.048 9.5A18.022 18.022 0 016.412 9m6.088 9h7M11 21l5-10 5 10M12.751 5C11.783 10.77 8.07 15.61 3 18.129"/>
                  </svg>
                  <div>
                    <div class="detail-label">Idioma</div>
                    <div class="detail-value">{event.language}</div>
                  </div>
                </div>
              )}
              {event.level && (
                <div class="detail-item">
                  <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M13 10V3L4 14h7v7l9-11h-7z"/>
                  </svg>
                  <div>
                    <div class="detail-label">Nível</div>
                    <div class="detail-value">{event.level}</div>
                  </div>
                </div>
              )}
            </div>
          </div>

          <!-- Share -->
          <div class="sidebar-card">
            <h3>Compartilhar</h3>
            <div class="share-buttons">
              <button class="share-button">
                <svg viewBox="0 0 24 24" fill="currentColor">
                  <path d="M24 4.557c-.883.392-1.832.656-2.828.775 1.017-.609 1.798-1.574 2.165-2.724-.951.564-2.005.974-3.127 1.195-.897-.957-2.178-1.555-3.594-1.555-3.179 0-5.515 2.966-4.797 6.045-4.091-.205-7.719-2.165-10.148-5.144-1.29 2.213-.669 5.108 1.523 6.574-.806-.026-1.566-.247-2.229-.616-.054 2.281 1.581 4.415 3.949 4.89-.693.188-1.452.232-2.224.084.626 1.956 2.444 3.379 4.6 3.419-2.07 1.623-4.678 2.348-7.29 2.04 2.179 1.397 4.768 2.212 7.548 2.212 9.142 0 14.307-7.721 13.995-14.646.962-.695 1.797-1.562 2.457-2.549z"/>
                </svg>
              </button>
              <button class="share-button">
                <svg viewBox="0 0 24 24" fill="currentColor">
                  <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
                </svg>
              </button>
            </div>
          </div>
        </aside>
      </div>
    </div>
  </article>

  <Footer />
</BaseLayout>

<style>
  .event-page {
    background-color: var(--bg-secondary);
  }

  /* Hero */
  .event-hero {
    position: relative;
    height: 50vh;
    min-height: 400px;
    max-height: 600px;
    overflow: hidden;
    background-color: var(--bg-dark);
  }

  .hero-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .hero-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(to bottom, rgba(0,0,0,0.4) 0%, rgba(0,0,0,0.7) 100%);
  }

  .hero-content {
    position: absolute;
    inset: 0;
    display: flex;
    align-items: flex-end;
    padding-bottom: var(--spacing-3xl);
  }

  .event-type {
    display: inline-block;
    font-size: var(--text-sm);
    font-weight: 600;
    color: white;
    background-color: var(--accent);
    padding: var(--spacing-xs) var(--spacing-md);
    border-radius: var(--radius-md);
    margin-bottom: var(--spacing-md);
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .event-title {
    font-size: var(--text-5xl);
    font-weight: 800;
    color: white;
    margin: 0 0 var(--spacing-lg) 0;
    text-shadow: 0 2px 10px rgba(0, 0, 0, 0.3);
  }

  .event-meta-hero {
    display: flex;
    gap: var(--spacing-xl);
    flex-wrap: wrap;
  }

  .meta-item {
    display: flex;
    align-items: center;
    gap: var(--spacing-xs);
    color: white;
    font-size: var(--text-base);
    font-weight: 500;
  }

  .meta-item svg {
    width: 20px;
    height: 20px;
  }

  /* Layout */
  .event-layout {
    display: grid;
    grid-template-columns: 1fr 400px;
    gap: var(--spacing-3xl);
    padding: var(--spacing-4xl) 0;
  }

  /* Main Content */
  .event-main {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-3xl);
  }

  .tags {
    display: flex;
    gap: var(--spacing-sm);
    flex-wrap: wrap;
  }

  .tag {
    font-size: var(--text-xs);
    font-weight: 600;
    color: var(--primary);
    background-color: white;
    padding: var(--spacing-xs) var(--spacing-md);
    border-radius: var(--radius-full);
    border: 1px solid rgba(37, 99, 235, 0.2);
  }

  .content-section {
    background-color: white;
    padding: var(--spacing-2xl);
    border-radius: var(--radius-xl);
  }

  .content-section h2 {
    font-size: var(--text-2xl);
    font-weight: 700;
    color: var(--text-primary);
    margin: 0 0 var(--spacing-lg) 0;
  }

  .large-text {
    font-size: var(--text-lg);
    line-height: 1.8;
    color: var(--text-primary);
  }

  .topics-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: var(--spacing-sm);
  }

  .topics-list li {
    padding-left: var(--spacing-lg);
    position: relative;
    color: var(--text-primary);
    line-height: var(--leading-relaxed);
  }

  .topics-list li::before {
    content: '→';
    position: absolute;
    left: 0;
    color: var(--primary);
    font-weight: 700;
  }

  /* Schedule */
  .schedule {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-md);
  }

  .schedule-item {
    display: grid;
    grid-template-columns: 150px 1fr;
    gap: var(--spacing-lg);
    padding: var(--spacing-md);
    background-color: var(--bg-secondary);
    border-radius: var(--radius-lg);
  }

  .schedule-time {
    font-weight: 600;
    color: var(--primary);
  }

  .schedule-activity {
    color: var(--text-primary);
  }

  /* Highlight Section */
  .highlight-section {
    background: linear-gradient(135deg, #EEF2FF 0%, #E0E7FF 100%);
    border-left: 4px solid var(--primary);
  }

  .learn-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: var(--spacing-md);
  }

  .learn-list li {
    display: flex;
    align-items: flex-start;
    gap: var(--spacing-sm);
    color: var(--text-primary);
    line-height: var(--leading-relaxed);
  }

  .learn-list li svg {
    width: 24px;
    height: 24px;
    color: var(--primary);
    flex-shrink: 0;
    margin-top: 2px;
  }

  /* Speaker Card */
  .speaker-card {
    display: flex;
    gap: var(--spacing-lg);
    padding: var(--spacing-lg);
    background-color: var(--bg-secondary);
    border-radius: var(--radius-lg);
  }

  .speaker-avatar {
    width: 80px;
    height: 80px;
    border-radius: 50%;
    background: linear-gradient(135deg, var(--primary), var(--secondary));
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-size: var(--text-2xl);
    font-weight: 700;
    flex-shrink: 0;
  }

  .speaker-info {
    flex: 1;
  }

  .speaker-name {
    font-size: var(--text-xl);
    font-weight: 700;
    color: var(--text-primary);
    text-decoration: none;
    display: block;
    margin-bottom: 2px;
  }

  .speaker-name:hover {
    color: var(--primary);
  }

  .speaker-profession {
    font-size: var(--text-base);
    color: var(--primary);
    font-weight: 600;
    margin: 0 0 var(--spacing-sm) 0;
  }

  .speaker-bio {
    font-size: var(--text-sm);
    line-height: var(--leading-relaxed);
    color: var(--text-secondary);
    margin: 0;
  }

  /* Info Box */
  .info-box {
    background-color: #fef3c7;
    border-left: 4px solid #f59e0b;
    padding: var(--spacing-lg);
    border-radius: var(--radius-lg);
    display: flex;
    gap: var(--spacing-md);
  }

  .info-box svg {
    width: 24px;
    height: 24px;
    color: #f59e0b;
    flex-shrink: 0;
  }

  .info-box p {
    margin: 0;
    color: #78350f;
    font-size: var(--text-base);
  }

  /* Sidebar */
  .event-sidebar {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-lg);
    position: sticky;
    top: var(--spacing-xl);
  }

  .sidebar-card {
    background-color: white;
    padding: var(--spacing-xl);
    border-radius: var(--radius-xl);
    box-shadow: var(--shadow-sm);
  }

  .sidebar-card h3 {
    font-size: var(--text-lg);
    font-weight: 700;
    color: var(--text-primary);
    margin: 0 0 var(--spacing-lg) 0;
  }

  /* Registration Card */
  .registration-card {
    background: linear-gradient(135deg, var(--primary), var(--secondary));
    color: white;
  }

  .registration-card h3 {
    color: white;
  }

  .registration-info {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-md);
    margin-bottom: var(--spacing-lg);
  }

  .info-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-bottom: var(--spacing-sm);
    border-bottom: 1px solid rgba(255, 255, 255, 0.2);
  }

  .info-item:last-child {
    border-bottom: none;
  }

  .info-label {
    font-size: var(--text-sm);
    opacity: 0.9;
  }

  .info-value {
    font-weight: 600;
  }

  .status-badge {
    background-color: #d1fae5;
    color: #065f46;
    font-size: var(--text-xs);
    font-weight: 600;
    padding: 4px 12px;
    border-radius: var(--radius-md);
  }

  .cta-button {
    width: 100%;
    background-color: white;
    color: var(--primary);
    border: none;
  }

  .cta-button:hover {
    background-color: var(--bg-secondary);
    transform: translateY(-2px);
  }

  /* Details List */
  .details-list {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-md);
  }

  .detail-item {
    display: flex;
    gap: var(--spacing-sm);
  }

  .detail-item svg {
    width: 20px;
    height: 20px;
    color: var(--primary);
    flex-shrink: 0;
    margin-top: 2px;
  }

  .detail-label {
    font-size: var(--text-xs);
    color: var(--text-secondary);
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .detail-value {
    font-size: var(--text-sm);
    color: var(--text-primary);
    font-weight: 500;
  }

  /* Share */
  .share-buttons {
    display: flex;
    gap: var(--spacing-sm);
  }

  .share-button {
    flex: 1;
    padding: var(--spacing-sm);
    background-color: var(--bg-secondary);
    border: none;
    border-radius: var(--radius-md);
    cursor: pointer;
    transition: all var(--transition-base);
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .share-button:hover {
    background-color: var(--primary);
    color: white;
  }

  .share-button svg {
    width: 20px;
    height: 20px;
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .event-layout {
      grid-template-columns: 1fr;
    }

    .event-sidebar {
      position: static;
    }
  }

  @media (max-width: 768px) {
    .event-hero {
      height: 40vh;
      min-height: 300px;
    }

    .event-title {
      font-size: var(--text-3xl);
    }

    .event-meta-hero {
      flex-direction: column;
      gap: var(--spacing-sm);
    }

    .schedule-item {
      grid-template-columns: 1fr;
      gap: var(--spacing-xs);
    }

    .speaker-card {
      flex-direction: column;
      text-align: center;
    }
  }
</style>
